{{#if keywords ~}}
{{>queries_query_string
  querystring=keywords
  fields=(split "text_bag_boost^5,text_bag" ",")
}},
{{/if ~}}
{{#ifAny location la ~}}
{
  "bool": {
    "should": [
      {{#ifAll location lat lng distance ~}}
      {
        "geo_distance": {
          "distance": "{{default distance "8.04672"}}km",
          "geo_coords": {
            "lat": {{lat}},
            "lon": {{lng}}
          }
        }
      },
      {{/ifAll ~}}
      {{#if la ~}}
      {{#compare @root.route.name "===" "opportunity_search" ~}}
      {{>queries_term field="advertised_areas" term=la}},
      {{/compare ~}}
      {{/if ~}}
      {{>queries_do_nothing}}
    ],
    "minimum_should_match": 2
  }
},
{{/ifAny ~}}
{{>queries_do_nothing}}
