{{#if paging.totalResults ~}}
<div class="search-info">
  <span class="hide-sm">Your {{if @root.request.params.query.only_la "filtered"}} search returned </span><strong>{{addCommas paging.totalResults}} {{inflect paging.totalResults "result" "results"}}</strong>
  {{#compare @root.route.name "!==" "opportunity_map" ~}}
  {{#compare paging.totalResults ">" 10 ~}} -
  page {{addCommas paging.currentPage}} of {{addCommas paging.totalPages}}
  {{/compare ~}}
  {{/compare ~}}
  {{#if @root.request.params.query.only_la ~}}
  <a href="/search{{replace @root.request.url.search "&only_la=true" ""}}">Show all</a>
  {{/if ~}}
</div>
{{else}}
{{#ifAny @root.request.params.query.keywords @root.request.params.query.location @root.request.params.query.work_types @root.request.params.query.client_groups @root.request.params.query.organisation_activities @root.request.params.query.has_opportunities @root.request.params.query.volunteersearch_types @root.request.params.query.age_groups @root.request.params.query.services ~}}
<div class="search-info">
  No results could be found, please try a different search query
  {{#compare @root.route.name "===" "opportunities_in" ~}}
  or <a href="/search{{@root.request.url.search}}">search across all areas</a>
  {{/compare ~}}
</div>
{{/ifAny ~}}
{{/if ~}}