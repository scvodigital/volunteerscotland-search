<div class="mdc-card full" data-organisation-id="{{Id}}">
  <div class="mdc-card__info--content-secondary-row">
    <div class="mdc-card__info--content-secondary">
      {{#if goodhq_organisation.image_url ~}}
        <div class="mdc-card__media mdc-card__media--content-secondary">
          <img src="{{goodhq_organisation.image_url}}" alt="{{title}}" />
        </div>
      {{/if ~}}
      <div class="mdc-card__info--content-secondary-title mdc-typography--headline3">
        {{{title}}}
      </div>
      <div class="detailed-info">
        {{#ifAny description description_html ~}}
        <div class="mdc-typography--body1 v-margin">
          {{#if description_html}}{{{description_html}}}{{else}}{{description}}{{/if}}
        </div>
        {{/ifAny ~}}
      </div>
      <div class="key-info-extra">
        <ul class="fa-ul">
          {{#compare (length main_activities_global) ">" 0 ~}}
            <li class="mdc-card__info--content-primary-work-type reference mdc-typography--body1">
              <span class="fa-li"><span class="far fa-briefcase fa-fw" title="Activities"></span></span>
              {{#each main_activities_global ~}}
                <a href="/organisations/search?organisation_activities%5B%5D={{urlencode (slugify (replace this "/" "-"))}}">{{{this}}}</a>{{#unless @last}}, {{/unless}}
              {{/each ~}}
            </li>
          {{/compare ~}}

          {{#if geo ~}}
            <li class="mdc-card__info--content-primary-work-type reference mdc-typography--body1">
              <span class="fa-li"><span class="far fa-map-marker-alt fa-fw" title="Location"></span></span>
              {{geo.admin_ward}}, {{replace (replace geo.admin_district "City of " "") " City" ""}}
            </li>
          {{/if}}

          {{#if website ~}}
          {{#compare website "!==" null ~}}
          {{#compare website "!==" "http://" ~}}
          <li class="mdc-card__info--content-secondary-website mdc-typography--body1">
            <span class="fa-li"><span class="far fa-link fa-fw" title="Website"></span></span>
            <a href="{{fixUrl website "http"}}">{{website}}</a>
          </li>
          {{/compare ~}}
          {{/compare ~}}
          {{/if ~}}
          {{#if twitter ~}}
          {{#compare twitter "!==" null ~}}
          {{#compare twitter "!==" "http://" ~}}
          <li class="mdc-card__info--content-secondary-twitter mdc-typography--body1">
            <span class="fa-li"><span class="fab fa-twitter fa-fw" title="Twitter"></span></span>
            <a href="{{#unless (contains twitter "twitter.com")}}http://twitter.com/{{/unless}}{{twitter}}">{{twitter}}</a>
          </li>
          {{/compare ~}}
          {{/compare ~}}
          {{/if ~}}
          {{#if facebook ~}}
          {{#compare facebook "!==" null ~}}
          {{#compare facebook "!==" "http://" ~}}
          <li class="mdc-card__info--content-secondary-facebook mdc-typography--body1">
            <span class="fa-li"><span class="fab fa-facebook fa-fw" title="Facebook"></span></span>
            <a href="{{fixUrl facebook "http"}}">{{facebook}}</a>
          </li>
          {{/compare ~}}
          {{/compare ~}}
          {{/if ~}}
          {{#if linkedin ~}}
          {{#compare linkedin "!==" null ~}}
          {{#compare linkedin "!==" "http://" ~}}
          <li class="mdc-card__info--content-secondary-linkedin mdc-typography--body1">
            <span class="fa-li"><span class="fab fa-linkedin fa-fw" title="LinkedIn"></span></span>
            <a href="{{fixUrl linkedin "http"}}">{{linkedin}}</a>
          </li>
          {{/compare ~}}
          {{/compare ~}}
          {{/if ~}}


          {{#if goodhq_organisation ~}}
          {{#compare goodhq_organisation.xid "!==" null ~}}
          <li class="mdc-card__info--content-secondary-goodhq mdc-typography--body1">
            <span class="fa-li"><span class="fas fa-heart fa-fw" title="Good HQ"></span></span>
            <a href="https://goodhq.org/{{goodhq_organisation.xid}}">@{{goodhq_organisation.xid}}</a>
            {{#compare goodhq_organisation.status "===" "Open" ~}}
              <a href="https://goodhq.org/{{goodhq_organisation.xid}}?mode=reviews">{{> goodhq_heart_rating stars=goodhq_organisation.stars}}</a>
              â€“
            {{#compare @root.data.goodhq.reviews.hits.total ">" 0 ~}}
            <a href="https://goodhq.org/{{goodhq_organisation.xid}}?mode=reviews">{{inflect @root.data.goodhq.reviews.hits.total "review" "reviews" true}}</a> {{#compare @root.data.goodhq.posts.hits.total ">" 0}} and {{/compare ~}}
            {{/compare ~}}
              {{#compare @root.data.goodhq.posts.hits.total ">" 0 ~}}
            <a href="https://goodhq.org/{{goodhq_organisation.xid}}?mode=posts">{{inflect @root.data.goodhq.posts.hits.total "post" "posts" true}}</a>
            {{/compare ~}}
            {{/compare ~}}
            on
            <a href="https://goodhq.org/{{goodhq_organisation.xid}}">Good HQ</a>
          </li>
          {{/compare ~}}
          {{/if ~}}
          <li class="mdc-card__info--content-secondary-report report mdc-typography--body1">
            <span class="fa-li"><span class="fas fa-flag fa-fw" title="Report this organisation"></span></span>
            <a href="mailto:milosupport@scvo.org.uk?subject=Report%20on%20organisation:%20{{urlencode title}},%20via Volunteer%20Scotland%20Search&body=I%20would%20like%20to%20report%20this%20organisation%20for%20the%20following%20reasons:">Report this organisation</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>