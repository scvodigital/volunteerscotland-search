<div class="map-content">
  <h3 class="mdc-typography--headline7">
    <a href="/organisation/{{Id}}/{{title_slug}}{{@root.request.url.search}}">{{title}}</a>
  </h3>
  {{#if postcode ~}}
  <div class="mdc-typography--body1 post-title v-margin">
    Postcode: {{postcode}}
  </div>
  {{/if ~}}
  <div class="mdc-typography--body2">
    {{#if description ~}}
    <div style="max-height: 4.2rem;"  class="post-info-extra post-info-description faded-overflow">
      {{{description}}}
    </div>
    {{/if ~}}
  </div>
  <div class="mdc-typography--body2">
    <a href="/organisation/{{Id}}/{{title_slug}}{{@root.request.url.search}}" class="mdc-card__action">Find out more</a>
  </div>
</div>
