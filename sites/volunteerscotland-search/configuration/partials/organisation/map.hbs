<div class="map-content">
  <h3 class="mdc-typography--headline7">
    <a href="/organisation/{{slug}}{{@root.request.url.search}}">{{title}}</a>
  </h3>
  {{#if postcode ~}}
  <div class="mdc-typography--body1 v-margin">
    Postcode: {{postcode}}
  </div>
  {{/if ~}}
  <div class="mdc-typography--body2 post-info">
    {{#if description ~}}
    <div style="max-height: 4.2rem;"  class="post-info-item post-info-description faded-overflow">
      {{{description}}}
    </div>
    {{/if ~}}
  </div>
  <div class="mdc-typography--body2">
    <a href="/organisation/{{slug}}{{@root.request.url.search}}" class="mdc-card__action">Find out more</a>
  </div>
</div>
