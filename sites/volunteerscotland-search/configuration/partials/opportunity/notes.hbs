{{#compare (trim (getProperty @root.data.notes Id)) "!==" "" ~}}
  <div class="search-result-article__notes">
    <h4 class="mdc-typography--headline7">
      Your notes&ensp;
      <a href="/opportunity/{{slug}}{{@root.request.url.search}}#notes" class="mdc-typography--body2">Edit</a>
    </h4>
    <div class="mdc-typography--body1">
      {{#if limit ~}}
        {{#compare @root.route.name "===" "notes" ~}}
          {{{markdown (getProperty @root.data.notes Id)}}}
        {{else}}
          <div style="max-height: {{limit}};" class="faded-overflow">
          {{{markdown (truncate (getProperty @root.data.notes Id) limit)}}}
          </div>
          <a href="/opportunity/{{slug}}{{@root.request.url.search}}#notes">Read more</a>
        {{/compare ~}}
      {{else}}
        {{{markdown (getProperty @root.data.notes Id)}}}
      {{/if ~}}
    </div>
  </div>
{{/compare ~}}
