<div class="mdc-card content-primary search-result" data-event-id="{{Id}}" data-event-layout="Search Result" data-event-context="{{default viewContext "Search Results"}}">
  {{> event_key_info}}
  <hr class="mdc-list-divider" />
  {{#compare (trim (getProperty @root.data.profileInfo.notes Id)) "!==" "" ~}}
    {{> event_description limit="3rem" description=description}}
    {{> event_notes limit="3rem"}}
  {{else}}
    {{> event_description limit="6rem" description=description}}
  {{/compare ~}}
  {{> event_actions slug=slug Id=Id home_based=home_based distance=distance action=action}}
</div>