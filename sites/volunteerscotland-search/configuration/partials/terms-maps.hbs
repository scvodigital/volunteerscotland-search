{
  {{#each (split "volunteersearch_types,themes,activities,availability,age_groups,services,advertised_areas" ",")}}
    "{{this}}": {
      "slugsMap" : {
        {{#each (getProperty @root.context.metaData.terms (concat this ".termGroups"))}}
        {{#each terms}}
          "{{@key}}" : {
            "term": "{{{label}}}"
          } {{#unless @last}},{{/unless}}
        {{/each}} {{#unless @last}},{{/unless}}
      {{/each}}
      },
      "termsMap" : {
        {{#each (getProperty @root.context.metaData.terms (concat this ".termGroups"))}}
          {{#each terms}}
            "{{{label}}}" : {
            "term": "{{@key}}"
          } {{#unless @last}},{{/unless}}
          {{/each}} {{#unless @last}},{{/unless}}
        {{/each}}
      },
    "all" : [
    {{#each (getProperty @root.context.metaData.terms (concat this ".termGroups"))}}
      {{#each terms}}
        {
        "slug" : "{{@key}}",
        "term": "{{{label}}}"
        } {{#unless @last}},{{/unless}}
      {{/each}} {{#unless @last}},{{/unless}}
    {{/each}}
    ]
    }{{#unless @last}},{{/unless}}
  {{/each}}
}
