<div class="mdc-layout-grid home-content-primary">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-roles mdc-typography--headline8">
        Themes
      </div>
      <ul class="mdc-list themes">
        {{#each @root.context.metaData.terms.client_groups.termGroups ~}}
        <a class="mdc-list-item" href="/search?{{#each terms}}client_groups={{urlencode (slugify (replace @key "/" "-"))}}&{{/each}}group=true" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Client group: {{slugify (replace @key "/" "-")}}' })">
          <span class="mdc-list-item__text">
            {{{label}}}
          </span>
          <span class="mdc-list-item__meta">

          </span>
        </a>
        {{/each ~}}
        {{!-- #each @root.data.opportunitySupplimentary.types.aggregations.client_groups.buckets ~}}
          {{#if key ~}}
            <a class="mdc-list-item" href="/search?client_groups%5B%5D={{urlencode (slugify (replace key "/" "-"))}}" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Client group: {{slugify (replace key "/" "-")}}' })">
              <span class="mdc-list-item__text">
                {{{key}}}
              </span>
              <span class="mdc-list-item__meta" aria-label="{{doc_count}} opportunities">
                {{doc_count}}
              </span>
            </a>
          {{/if ~}}
        {{/each ~ --}}
      </ul>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-work_types mdc-typography--headline8">
        Activities
      </div>
      <ul class="mdc-list activities">
        {{#each @root.context.metaData.terms.work_types.termGroups ~}}
        <a class="mdc-list-item" href="/search?{{#each terms}}work_types={{urlencode (slugify (replace @key "/" "-"))}}&{{/each}}group=true" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Client group: {{slugify (replace @key "/" "-")}}' })">
          <span class="mdc-list-item__text">
            {{{label}}}
          </span>
          <span class="mdc-list-item__meta">

          </span>
        </a>
        {{/each ~}}
        {{!-- #each @root.data.opportunitySupplimentary.types.aggregations.work_types.buckets ~}}
          {{#if key ~}}
            <a class="mdc-list-item" href="/search?work_types%5B%5D={{urlencode (slugify (replace key "/" "-"))}}" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Work type: {{slugify (replace key "/" "-")}}' })">
              <span class="mdc-list-item__text">
                {{{key}}}
              </span>
              <span class="mdc-list-item__meta" aria-label="{{doc_count}} opportunities">
                {{doc_count}}
              </span>
            </a>
          {{/if ~}}
        {{/each ~ --}}
      </ul>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-areas mdc-typography--headline8">
        Areas
      </div>
      <ul class="mdc-list areas">
        {{#each @root.data.opportunitySupplimentary.types.aggregations.local_authorities.buckets ~}}
          {{#if key ~}}
            <a class="mdc-list-item" href="/opportunities-in/{{urlencode (slugify (replace key "/" "-"))}}" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Area: {{slugify (replace key "/" "-")}}' })">
              <span class="mdc-list-item__text">
                {{{key}}}
              </span>
              {{#compare doc_count ">" 0 ~}}
              <span class="mdc-list-item__meta">
                <span class="fas fa-location-arrow fa-fw" title="Opportunities at a specific location in {{{key}}}"></span>
                {{doc_count}}
              </span>
              {{/compare ~}}
              {{#compare (getProperty (firstItem (filter @root.data.opportunitySupplimentary.types.aggregations.advertised_areas_slugs.buckets "key" "===" (slugify (replace key "/" "-")))) "doc_count") ">" 0 ~}}
              <span class="mdc-list-item__meta">
                <span class="far fa-location-arrow fa-fw" title="Opportunities advertised across {{{key}}}"></span>
                {{getProperty (firstItem (filter @root.data.opportunitySupplimentary.types.aggregations.advertised_areas_slugs.buckets "key" "===" (slugify (replace key "/" "-")))) "doc_count"}}
              </span>
              {{/compare ~}}
            </a>
          {{/if ~}}
        {{/each ~}}
      </ul>
    </div>
  </div>
</div>
