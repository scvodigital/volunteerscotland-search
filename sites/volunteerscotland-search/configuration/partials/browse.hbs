<div class="mdc-layout-grid home-content-primary">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-roles mdc-typography--headline8">
        Themes
      </div>
      <ul class="mdc-list themes">
        {{#each @root.context.metaData.terms.themes.termGroups ~}}
        <a class="mdc-list-item" href="/search?{{#each terms}}themes={{urlencode (slugify (replace @key "/" "-"))}}&{{/each}}group=true" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Theme: {{slugify (replace @key "/" "-")}}' })">
          <span class="mdc-list-item__text">
            {{{label}}}
          </span>
          <span class="mdc-list-item__meta">

          </span>
        </a>
        {{/each ~}}
      </ul>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-activities mdc-typography--headline8">
        Activities
      </div>
      <ul class="mdc-list activities">
        {{#each @root.context.metaData.terms.activities.termGroups ~}}
        <a class="mdc-list-item" href="/search?{{#each terms}}activities={{urlencode (slugify (replace @key "/" "-"))}}&{{/each}}group=true" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Theme: {{slugify (replace @key "/" "-")}}' })">
          <span class="mdc-list-item__text">
            {{{label}}}
          </span>
          <span class="mdc-list-item__meta">

          </span>
        </a>
        {{/each ~}}
      </ul>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone content page-content">
      <div class="browse-title browse-title-areas mdc-typography--headline8">
        Areas
      </div>
      <ul class="mdc-list areas">
        {{#each @root.context.metaData.terms.advertised_areas.termGroups.other.terms ~}}
          {{#if @key ~}}
            <a class="mdc-list-item" href="/opportunities-in/{{@key}}" role="menuitem" onclick="gtag('event', 'navigation', { event_category: '{{default ../eventContext "category-browser"}}', event_label: 'Area: {{label}}' })">
              <span class="mdc-list-item__text">
                {{{label}}}
              </span>
            </a>
          {{/if ~}}
        {{/each ~}}
      </ul>
    </div>
  </div>
</div>
