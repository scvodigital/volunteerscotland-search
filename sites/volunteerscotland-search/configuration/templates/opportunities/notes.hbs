  {{#compare @root.data.notes_opportunities.open.hits.total "===" 0}}
      <p class="mdc-typography--body1">
        You don't have notes on any open opportunities. To write a note, navigate to the full details of a opportunity then enter the&ensp;<strong><span class="far fa-edit mdc-chip__icon mdc-chip__icon--leading" aria-hidden="true"></span>Notes</strong>&ensp;tab, type out some text, then click the&ensp;<strong><span class="far fa-save mdc-chip__icon mdc-chip__icon--leading" aria-hidden="true"></span>Save notes</strong>&ensp;button.
      </p>
  {{/compare}}

  {{#compare @root.data.notes_opportunities.open.hits.total ">" 0}}
    {{#each @root.data.notes_opportunities.open.hits.hits ~}}
      {{#compare (trim (getProperty @root.data.notes _source.Id)) "!==" "" ~}}
        {{> opportunity_search_result _source}}
      {{/compare ~}}
    {{/each ~}}
    <div class="foot">
      {{> pagination paging=@root.data.notes_opportunities.open.pagination}}
    </div>
  {{/compare}}

  {{#compare @root.data.notes_opportunities.closed.hits.total ">" 0}}
    <h2 class="mdc-typography--headline5 v-margin-full">
      Closed opportunities
    </h2>
    {{#each @root.data.notes_opportunities.closed.hits.hits ~}}
      {{#compare (trim (getProperty @root.data.notes _source.Id)) "!==" "" ~}}
        {{> opportunity_search_result _source}}
      {{/compare ~}}
    {{/each ~}}
    <div class="foot">
      {{> pagination paging=@root.data.notes_opportunities.closed.pagination}}
    </div>
  {{/compare}}
