        <span class="area">{{{replace (replace (replace key " and " " & ") " City" "") "City of " ""}}}</span>
        {{/if ~}}
        {{#if @last}}{{#compare @root.data.location_data.home_results.hits.total ">" 0}}
        {{#compare @root.data.search_data.areas_results.hits.total ">" 0 ~}}
        </span>
