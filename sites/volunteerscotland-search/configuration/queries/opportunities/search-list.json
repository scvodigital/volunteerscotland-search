{
  "size": 10,
  "from": {{multiply (subtract (default @root.request.params.query.page 1) 1) 10}},
  "_source": [
    "Id",
    "slug",
    "available_from",
    "client_group",
    "client_group_slugs",
    "date_last_modified",
    "description",
    "goodhq_organisation.image_url",
    "geo_coords",
    "geo",
    "postcode",
    "opportunity_type",
    "opportunity_type_slugs",
    "organisation_slug",
    "organisation_name",
    "organisation_aims_and_objectives",
    "title",
    "work_type",
    "work_type_slugs"
],
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "filter": [
            {{>queries_opportunity_common_filters @root.request.params.query}},
            {{>queries_opportunity_search_filters @root.request.params.query}}
          ],
          "must": [
            {{>queries_opportunity_search_must @root.request.params.query}}
          ],
          "should": [
            {{>queries_opportunity_search_should @root.request.params.query}}
          ]
          {{#if @root.request.params.query.only_la ~}},
          "must_not": [
            {
              "geo_distance": {
                "distance": "{{default @root.request.params.query.distance "10"}}mi",
                "geo_coords": {
                  "lat": {{@root.request.params.query.lat}},
                  "lon": {{@root.request.params.query.lng}}
                }
              }
            }
          ]
          {{/if ~}}
        }
      },
      "boost_mode": "multiply",
      "functions" : [
        {
          "weight": "8",
          "gauss": {
            "date_last_modified": {
              "scale": "10d",
              "decay": "0.1"
            }
          }
        }
      ]
    }
  },
  "sort": [
    {{#if @root.request.params.query.sort ~}}
      {{#compare @root.request.params.query.sort "===" "distance" ~}}
        {{#ifAll @root.request.params.query.location @root.request.params.query.lat @root.request.params.query.lng ~}}
          {
            "_geo_distance": {
              "geo_coords": {
                "lat": {{@root.request.params.query.lat}},
                "lon": {{@root.request.params.query.lng}}
              },
              "order": "asc",
              "unit": "mi",
              "mode": "min",
              "distance_type": "arc"
            }
          }
        {{else}}
          "_score"
        {{/ifAll ~}}
      {{else}}
        {{#compare @root.request.params.query.sort "===" "relevance" ~}}
          "_score"
        {{/compare ~}}
      {{/compare ~}}
    {{else}}
      "_score"
    {{/if ~}}
    {{#ifAll @root.request.params.query.location @root.request.params.query.lat @root.request.params.query.lng ~}},
      {
        "_geo_distance": {
          "geo_coords": {
            "lat": {{@root.request.params.query.lat}},
            "lon": {{@root.request.params.query.lng}}
          },
          "order": "asc",
          "unit": "mi",
          "mode": "min",
          "distance_type": "arc"
        }
      }
    {{/ifAll ~}}
  ]
}
