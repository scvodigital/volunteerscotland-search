{
  "name": "testpage",
  "pattern": "/testpage",
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "metaData" : {
    "emailTypes" : ["user-confirmation", "register-interest"]
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.opportunitySupplimentary",
    {
      "name": "emailTypes",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.email_email-types"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}