{
  "name": "testpage",
  "pattern": "/testpage",
  "debug" : true,
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "metaData" : {
    "emailTypes" : ["user-confirmation", "register-interest"]
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "send_email",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.email-out"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{{{stringify @root.data.send_emails}}}"
      }
    }
  ]
}