{
  "name": "remove-newsletter-subscription",
  "pattern": "/remove-newsletter-subscription/:list_ids",
  "debug":true,
  "acceptedVerbs": "GET",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "templateOpts",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.newsletters_remove-subscriptions",
        "output" : "data",
        "parseJson" : true
      }
    },
    {
      "name": "templateOptsStringified",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": ">context.metaData.handlebars.templates.newsletters_options-templates-hack",
        "output" : "data",
        "parseJson" : true
      }
    },

    {
      "name": "remove-subscription",
      "taskModule": "request",
      "config": {
        "optionsTemplates": ">data.templateOptsStringified"
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "Removed Subscription"
      }
    }
  ]
}