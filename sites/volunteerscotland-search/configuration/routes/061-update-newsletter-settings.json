{
  "name": "update-newsletter-settings",
  "pattern": "/update-newsletter-settings",
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "N1 {{{@root.request.body.newsletter-scotland}}} - N2 {{{@root.request.body.newsletter-events}}}"
      }
    }
  ]
}