{
  "name": "detect-legacy-user",
  "pattern": "/detect-legacy-user",
  "debug": true,
  "tasks": [
    {
      "name": "getUser",
      "taskModule": "firebaseGetUser",
      "config": {
        "appName": "volunteerscotland-search",
        "userIdentifier": ">request.params.query.useremail"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": "{{{stringify @root.data.getUser}}}",
        "output": "body",
        "parseJson": true
      }
    }
  ]
}