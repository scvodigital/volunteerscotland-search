{
  "name": "redirect-to-registered-interest",
  "pattern": "/redirect-to-registered-interest",
  "tasks": [
    {
      "name": "generate_url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{#if data.auth}}registered-interest?id={{{request.params.query.id}}}{{else}}register-interest/{{request.body.opportunity_slug}}?applied=true{{/if}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.generate_url",
        "statusCode": 302
      }
    }
  ]
}

